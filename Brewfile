tap "hashicorp/tap"
tap "homebrew/bundle"
tap "homebrew/cask"
tap "homebrew/core"
tap "universal-ctags/universal-ctags"

# Cross-platform make
brew "cmake"

# GNU File, Shell, and Text utilities
# "These are the core utilities which are expected to exist on every operating system"
# e.g. echo, chroot, kill, whoami, tee, touch, cat, ...
brew "coreutils"

# C++ library for machine learning
# needed for some python ML libraries
brew "dlib"

# "Pack, ship and run any application as a lightweight container"
brew "docker", link: false

# Modern replacement for 'ls'
brew "exa"

# CLI tool for quick access to files and directories
brew "fasd"

# Collection of GNU find, xargs, and locate
brew "findutils"

# Command-line fuzzy finder
brew "fzf"

# Tool to build, change, and version infrastructure
# a.k.a. infrastructure as code
brew "hashicorp/tap/terraform"

# Kubernetes package manager
brew "helm"

# Improved colored git diff
brew "icdiff"

# Kubernetes command-line interface
brew "kubernetes-cli"

# Asynchronous event library
brew "libev"

# LLVM's OpenMP runtime library
brew "libomp"

# Postgres C API library
brew "libpq"

# Mac App Store command-line interface
brew "mas"

# Parser generator tool and incremental parsing library
# used in Neovim for better syntax highlighting
brew "tree-sitter"

# _the_ terminal text editor
brew "vim"

# Only the best IDE there is
brew "neovim"

# JavaScript runtime
brew "node"

# OCaml package manager
brew "opam"

# Object-relational database system
brew "postgresql"

# Python version management
brew "pyenv"

# line-oriented search tool: https://github.com/BurntSushi/ripgrep
brew "ripgrep"

# Encrypt/decrypt using SSH keys
brew "ssh-vault"

# A fast code searching tool
brew "the_silver_searcher"

# The best terminal multiplexer there is
brew "tmux"

# Internet file retriever
brew "wget"

# General-purpose data compression with high compression ratio
brew "xz"

# Fish shell like syntax highlighting for zsh
brew "zsh-syntax-highlighting"

# lossless data-compression library
brew "zlib"

# Move and resize windows with ease
cask "spectacle"

# Open-source version of the X.Org X Window System
cask "xquartz"
