# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

# Preferred editor for local and remote sessions
export EDITOR='nvim'

# we're using BAT as CAT with syntax highlighting
# see: https://github.com/sharkdp/bat
# here we specify bat's color schema
BAT_THEME='nord'

# use fuzzy finder
export ENHANCD_FILTER=fzf

# Add ~/bin to PATH
export PATH=$PATH:~/bin
export PATH=/usr/local/bin:$PATH

export PATH="$HOME/bin:$PATH"
export PATH=$PATH:~/.local/bin
export PATH='/bin:/sbin':"$PATH"

# Poetry (python package manager)
export PATH="$HOME/.poetry/bin:$PATH"

# add the location of the scripts file for Pier CLI: https://github.com/pier-cli/pier
export PIER_CONFIG_PATH=$HOME/dotfiles/pier_scripts.toml


# --------------------------------------------------------------
# OS-X specific
# --------------------------------------------------------------
# Set CLICOLOR if you want Ansi Colors in iTerm2
export CLICOLOR=1

export EXTERNAL_LIBCLANG_PATH="/usr/local/Cellar/llvm/6.0.0/lib/libclang.dylib"

export PKG_CONFIG_PATH=/usr/local/lib/pkgconfig
export PKG_CONFIG_PATH=/usr/local/lib/pkgconfig:/usr/local/lib

export LIBRARY_PATH=$LIBRARY_PATH:/usr/local/opt/openssl/lib/

# don't update non-relevant dependencies when installing a package
export HOMEBREW_NO_INSTALLED_DEPENDENTS_CHECK=1
